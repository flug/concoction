{
    "name": "flug/concoction",
    "description": "Skeleton for CakePHP 2 app",
    "license": "MIT",
    "type": "project",
    "config": {
        "vendor-dir": "vendors"
    },
    "repositories" : [
        {
            "type": "package",
            "package": {
                "name" : "cakephp/cakephp",
                "version" : "2.5.1",
                "source" : {
                    "type" : "git",
                    "url" : "git://github.com/cakephp/cakephp.git",
                    "reference" : "2.5.1"
                }
            }
        }
    ],
    "autoload": {
        "psr-0": {
            "app\\Console\\Installer": ""
        }
    },
    "scripts": {
        "post-install-cmd": "app\\Console\\Installer::postInstall"
    },
    "extra": {
        "installer-paths": {
            "app/Plugin/DebugKit": ["cakephp/debug_kit"]
        }
    },
    "require" : {
        "php": ">=5.2.8",
        "ext-mcrypt" : "*",
        "cakephp/cakephp" : "2.5.1"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "cakephp/debug_kit" : "2.2.*"
    },
    "bin" : ["app/Console/cake"]
}
